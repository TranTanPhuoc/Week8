<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityfinal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="239dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="PLEASE TOUCH ONE!"
        android:textColor="#0790FD"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toStartOf="@+id/imgNm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgNm"
        app:srcCompat="@drawable/matcuoi_xanh" />

    <ImageView
        android:id="@+id/imgNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/matcuoi_vang" />

    <ImageView
        android:id="@+id/imgSad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgNm"
        app:layout_constraintTop_toTopOf="@+id/imgNm"
        app:srcCompat="@drawable/matcuoi_do" />

    <View
        android:id="@+id/view2"
        android:layout_width="642dp"
        android:layout_height="43dp"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFinsh"
        android:layout_width="177dp"
        android:layout_height="55dp"
        android:backgroundTint="#F36696"
        android:text="FINISH"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toStartOf="@+id/imgSad"
        app:layout_constraintStart_toEndOf="@+id/imgHp"
        app:layout_constraintTop_toBottomOf="@+id/imgHp" />

    <TextView
        android:id="@+id/txtCount"
        android:layout_width="72dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#FA0000"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFinsh"
        app:layout_constraintEnd_toStartOf="@+id/imgSad"
        app:layout_constraintStart_toEndOf="@+id/imgHp"
        app:layout_constraintTop_toBottomOf="@+id/imgNm" />

</androidx.constraintlayout.widget.ConstraintLayout>